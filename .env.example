# OAuth2Proxy設定
# GitHub OAuth App の設定例
OAUTH2_PROXY_CLIENT_ID=your-github-oauth-client-id
OAUTH2_PROXY_CLIENT_SECRET=your-github-oauth-client-secret
OAUTH2_PROXY_COOKIE_SECRET=your-32-character-random-string-for-cookie-encryption
OAUTH2_PROXY_PROVIDER=github
OAUTH2_PROXY_EMAIL_DOMAINS=*
OAUTH2_PROXY_REDIRECT_URL=http://localhost/oauth2/callback

# Cookieセキュリティ設定
OAUTH2_PROXY_COOKIE_SECURE=false  # HTTPSを使用する場合はtrue
OAUTH2_PROXY_COOKIE_HTTPONLY=true
OAUTH2_PROXY_SET_XAUTHREQUEST=true
OAUTH2_PROXY_PASS_ACCESS_TOKEN=true
OAUTH2_PROXY_PASS_USER_HEADERS=true

# AWS設定（Moto用）
AWS_ACCESS_KEY_ID=testing
AWS_SECRET_ACCESS_KEY=testing
AWS_DEFAULT_REGION=us-east-1
AWS_ENDPOINT_URL=http://moto:5000

# Google OAuth設定例（GitHubの代わりに使用する場合）
# OAUTH2_PROXY_CLIENT_ID=your-google-oauth-client-id
# OAUTH2_PROXY_CLIENT_SECRET=your-google-oauth-client-secret
# OAUTH2_PROXY_PROVIDER=google
# OAUTH2_PROXY_REDIRECT_URL=http://localhost/oauth2/callback

# Microsoft Azure AD設定例
# OAUTH2_PROXY_CLIENT_ID=your-azure-oauth-client-id
# OAUTH2_PROXY_CLIENT_SECRET=your-azure-oauth-client-secret
# OAUTH2_PROXY_PROVIDER=oidc
# OAUTH2_PROXY_OIDC_ISSUER_URL=https://login.microsoftonline.com/{tenant-id}/v2.0
# OAUTH2_PROXY_REDIRECT_URL=http://localhost/oauth2/callback

# セキュリティに関する注意：
# - OAUTH2_PROXY_COOKIE_SECRETは32文字のランダムな文字列である必要があります
# - 本番環境ではOAUTH2_PROXY_COOKIE_SECURE=trueを設定してください
# - 実際のOAuthクライアントIDとシークレットに置き換えてください